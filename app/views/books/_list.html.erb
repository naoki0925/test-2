<div class="col-md-3">
  <div class="row">
    <div class="col-md-4">
      <h2 class="mt-3">New book</h2>
      <%= form_with model: book, method: :post, local: true do |f| %>
      <div class="form-group">
        Title
  	  <% f.label :title %>
  	  <%= f.text_field :title %>
  	  </div>
      <div class="form-group">
        Opinion
  	  <% f.label :body %>
      <%= f.text_area :body %>
      </div>
      <div class="form-group">
    	<%= f.submit 'Create Book' %>
      </div>
     <% end %>
    </div>
  </div>
</div>